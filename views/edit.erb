<p>Form to edit Order</p>

<form action="/pizza-orders/<%=@order.id %>/edit" method="post">
<label for="first_name">First Name:</label>
<input type="text" id="first_name" name="first_name" value="<%= @order.first_name %>">

<label for="last_name">Last Name:</label>
<input type="text" id="last_name" name="last_name" value="<%= @order.last_name %>">

<label for="topping">Topping:</label>
<select name="topping" id="topping" option value="<%= @order.topping %>">
  <option value="Hawaiian">Hawaiian</option>
  <option value="Pepperoni">Pepperoni</option>
  <option value="Veg Supreme">Veg Supreme</option>
</select>

<label for="quantity">Quantity:</label>
<input type="number" name="quantity" value="<%= @order.quantity %>" id="quantity">
<input type="submit" value="Order Pizza">

</form>






<p>First Name: <%=@order.first_name %></p>
<p>Last Name: <%=@order.last_name %></p>
<p>Topping: <%=@order.topping %></p>
<p>Quantity: <%=@order.quantity %></p>
